{% extends 'base.html.twig' %}

{% block body %}

Hola mundo VENCIMIENTOS!!
<br>
<div class="row">
  <div class="col-3">
  {{ form_start(form) }}
      {{ form_widget(form) }}
  {{ form_end(form) }}
  </div>
  <div class="col-8">
  <h4>El valor de desastre es: {{desastre}}</h4>
  <h4> <a href="{{ path('vencimiento_pagados')}}">PAGADOS</a> </h4>
  <table class="table table-striped table-sm">
  <thead>
  <tr>
  <th>ID</th>
  <th>FECHA</th>
  <th>CLASE</th>
  <th>ENTIDAD</th>
  <th>DESCRIP</th>
  <th>TOTAL</th>
  <th>CUENTA</th>
  <th>ESTADO</th>
  <th>OPCIONES</th>
  </tr>
  </thead>
  <tbody>
  {% for parte in vencimiento %}
  <tr>
  <th scope="row">{{ parte.id }}</th>
  <td>{{ parte.fecha|date('d-m-Y') }}</td>
  <td><a href="{{ path('vencimiento_listar', { 'id': parte.id }) }}">{{ parte.clase.nombre }}</a></td>
  <td>{{ parte.entidad.nombre }}</td>
  <td>{{ parte.descripcion }}</td>
  <td>{{ parte.cantidad }}</td>
  <td>{{ parte.cuenta.numeracion }}</td>
  <td>{{ parte.estado }}</td>
  <td>
  {% if parte.estado == 'Suspendido' %}
  <a href="{{ path('vencimiento_procesar', { 'id': parte.id, 'opcion': 'seDebe' }) }}">ACTIVAR</a>
  {% else %}
  <a href="{{ path('vencimiento_procesar', { 'id': parte.id, 'opcion': 'pagar' }) }}">Pagar |</a>
  <a href="{{ path('vencimiento_procesar', { 'id': parte.id, 'opcion': 'suspender' }) }}">Anular</a>
  {% endif %}
  </td>
  </tr>
  {% endfor %}
  </tbody>
  </table>
  </div>
  <div class="col-1">
    <p>La fecha vale </p>
  </div>
</div>


{% endblock %}
