{% extends 'base.html.twig' %}

{% block body %}
REGISTROS PAGADOS!!
<br>
<div class="row">
  <div class="col-3">
  <h4> <a href="{{ path('inicioVencimiento')}}">POR PAGAR</a> </h4>
  </div>
  <div class="col-8">

  <table class="table table-striped table-sm">
  <thead>
  <tr>
  <th>ID</th>
  <th>FECHA</th>
  <th>CLASE</th>
  <th>ENTIDAD</th>
  <th>DESCRIP</th>
  <th>TOTAL</th>
  <th>CUENTA</th>
  <th>ESTADO</th>

  </tr>
  </thead>
  <tbody>
  {% for parte in vencimiento %}
  <tr>
  <th scope="row">{{ parte.id }}</th>
  <td>{{ parte.fecha|date('d-m-Y') }}</td>
  <td>{{ parte.clase.nombre }}</td>
  <td>{{ parte.entidad.nombre }}</td>
  <td>{{ parte.descripcion }}</td>
  <td>{{ parte.cantidad }}</td>
  <td>{{ parte.cuenta.numeracion }}</td>
  <td>{{ parte.estado }}</td>
  <td>
  <a href="{{ path('vencimiento_procesar', { 'id': parte.id, 'opcion': 'pagar' }) }}">Pagar |</a>
  {% if parte.estado == 'Suspendido' %}
  <a href="{{ path('vencimiento_procesar', { 'id': parte.id, 'opcion': 'seDebe' }) }}">SeDebe</a>
  {% else %}
  <a href="{{ path('vencimiento_procesar', { 'id': parte.id, 'opcion': 'suspender' }) }}">Suspender</a>
  {% endif %}
  </td>
  </tr>
  {% endfor %}
  </tbody>
  </table>
  </div>
  <div class="col-1">
    <p>La fecha vale </p>
  </div>
</div>


{% endblock %}
