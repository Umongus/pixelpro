{% extends 'base.html.twig' %}

{% block body %}


    <h2 class="page header">Listado de Tipos</h2>
    <table class="table table-striped">
    <thead>
    <tr>
    <th>ID</th>
    <th>NOMBRE</th>
    <th>OPCIONES</th>

    </tr>
    </thead>
    <tbody>
    {% for tipo in tipos %}
    <tr>
    <th scope="row">{{ tipo.id }}</th>
    <td>{{ tipo.nombre }}</td>
    <td>

    <a href=" {{ path('tipo_edit', { 'id': tipo.id }) }}">Editar |</a>
    <a href="{{ path('tipo_show', { 'id': tipo.id }) }}">Mostrar |</a>
    <a href="{{ path('tipo_delete', { 'id': tipo.id }) }}">Eliminar</a>

    </td>
    </tr>
    {% endfor %}
    </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tipo_new') }}">Crear nuevo Tipo</a>
        </li>
    </ul>
{% endblock %}
