{% extends 'base.html.twig' %}

{% block body %}
    <h1>Alta</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ alta.id }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if alta.fecha %}{{ alta.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Cantidad</th>
                <td>{{ alta.cantidad }}</td>
            </tr>
            <tr>
                <th>Observacion</th>
                <td>{{ alta.observacion }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('altas_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('altas_edit', { 'id': alta.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
