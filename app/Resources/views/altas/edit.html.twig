{% block body %}

    <div class="row">
      <div class="col-1">

      </div>
      <div class="col-11">
      <h1>Alta edit</h1>
      <br>
      {{form_start(edit_form)}}
        <fieldset>
        <div>
        <strong>{{ form_label(edit_form.mes, 'Mes') }}</strong><br>
