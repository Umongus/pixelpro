        <div>
        <strong>{{ form_label(edit_form.ano, 'Año') }}</strong><br>
        <span>{{ form_widget(edit_form.ano) }}</span>
        </div><br>
        <div>
        <strong>{{ form_label(edit_form.nombre, 'Trabajador') }}</strong><br>
        <span>{{ form_widget(edit_form.nombre) }}</span>
        </div><br>
        <div>
