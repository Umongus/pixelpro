{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
<div class="col-4">
<h2 class="page-header">Añadir nuevo precio:</h2>
<hr>
<p><strong>Mes Seleccionado: </strong></p>
<a href="#"><strong>{{mesAlta}}</strong></a>
<p><strong>Año Seleccionado: </strong></p>
<a href="#"><strong>{{anoAlta}}</strong></a>
<br>
{{form_start(form)}}
  <fieldset>

  <div>
  <strong>{{ form_label(form.nombre, 'Trabajador') }}</strong><br>
  <span>{{ form_widget(form.nombre) }}</span>
  </div><br>
  <div>
  <div>
  <strong>{{ form_label(form.cantidad, 'Número de altas en el mes:') }}</strong><br>
  <span>{{ form_widget(form.cantidad) }}</span>
  </div><br>
  <div>
  <div>
  <strong>{{ form_label(form.observacion, 'Alguna observación:') }}</strong><br>
  <span>{{ form_widget(form.observacion) }}</span>
  </div><br>
  <strong>{{ form_label(form.producto) }}</strong><br>
  <span>{{ form_widget(form.producto) }}</span>
  </div><br>
  </fieldset>
  <input type="submit" value="Create" />
{{ form_end(form) }}
</div>
</div>

    <ul>
        <li>
            <a href="{{ path('altas_index') }}">Back to the list</a>
        </li>
    </ul>
    {% if mensaje != 'Verdadero'%}
    <ul>
        <li>
              <p><h4>{{mensaje}}</h4></p>
        </li>
    </ul>
  {% endif %}
    <ul>
        <li>
            <p>Valor desastre vale: {{desastre}}</p>
        </li>
    </ul>
{% endblock %}
