{% extends 'base.html.twig' %}

{% block body %}
    <h1>Variedads list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for variedad in variedads %}
            <tr>
                <td><a href="{{ path('variedad_show', { 'id': variedad.id }) }}">{{ variedad.id }}</a></td>
                <td>{{ variedad.nombre }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('variedad_show', { 'id': variedad.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('variedad_edit', { 'id': variedad.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('variedad_new') }}">Create a new variedad</a>
        </li>
    </ul>
{% endblock %}
