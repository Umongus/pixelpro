{% extends 'base.html.twig' %}
{% block body %}
<div class=”col-lg-8 box-form”>
<br>
<h2 class="page-header">Selecciona nuevo día y cuadrilla:</h2><br>

<h4> <strong> Último registro insertado</strong> </h4>
<ul>
  <li>{{parte.fecha|date( 'd-m-Y' )}} | {{parte.trabajador}} | {{parte.trabajo}} | {{parte.finca}}</li>
</ul>


{{form_start(form)}}
  <fieldset>
  <br>
  <div>
  <strong>{{ form_label(form.fecha) }}</strong><br>
  <span>{{ form_widget(form.fecha) }}</span>
  </div><br>
  <div>
  <strong>{{ form_label(form.cuadrilla) }}</strong><br>
  <span>{{ form_widget(form.cuadrilla) }}</span>
  </div><br>
  </fieldset>
{{ form_end(form) }}
</div>
{% endblock %}
