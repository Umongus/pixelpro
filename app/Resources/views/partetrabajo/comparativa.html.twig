{% extends 'base.html.twig' %}
{% block body %}

<br>
<div class="row">
{% for key, cosecha in partes %}
  <div class="col-3">
    <p>COSECHA: <strong>{{key}}</strong></p>
    <table class="table table-sm">
  <thead>
    <tr>
      <th scope="col">Finca: {{cabecera}}</th>
      <th scope="col">Peonadas</th>
      <th scope="col">Horas</th>
    </tr>
  </thead>
  <tbody>
    {% for key, parte in cosecha %}
    <tr>
      <th scope="row">{{key}}</th>
      {% for trabajo in parte %}
        <td><strong>{{trabajo}}</strong></td>
      {% endfor %}
    </tr>
    {% endfor %}
  </tbody>
  </table>
  </div>
{% endfor %}
</div>
<br>
<hr>
<br>
<p>Cambiar alguno de los siguentes par√°metros:
<a href=" {{ path('Inicia_Comparativa', { 'opcion': 'finca' }) }}"> Finca |</a>
<a href=" {{ path('Inicia_Comparativa', { 'opcion': 'cosecha' }) }}">Cosecha |</a>
<a href=" {{ path('Inicia_Comparativa', { 'opcion': 'ambos' }) }}">Ambos</a>
</p>

{% for key, resultados in resumen %}

<p>RESUMEN COSECHA: {{key}}</p>
<table class="table table-sm">
<thead>
<tr>
  <th scope="col">RESULTADO</th>
  <th scope="col">CAMPO</th>
  <th scope="col">RECOLECCION</th>
  <th scope="col">ALMACEN</th>
  <th scope="col">TOTAL</th>
</tr>
</thead>
<tbody>
{% for key, resultado in resultados %}
    <tr>
      <th scope="row">{{key}}</th>
      {% for dato in resultado %}
          <td>{{dato}}</td>
      {% endfor %}
    </tr>
{% endfor %}
</tbody>
</table>
<br>
<hr>
{% endfor %}


{% endblock %}
