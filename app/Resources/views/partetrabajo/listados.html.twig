{% extends 'base.html.twig' %}

{% block body %}

<div class="row">
  <div class="col-3">


     {{form_start(form)}}
     {{form_widget(form)}}
     {{form_end(form)}}
  </div>
  <div class="col-9">

  <h2 class="page header">Total Peonadas: {{sumaP}} || Total Horas: {{sumaH}} </h2>

  <table class="table table-striped table-sm">
  <thead>
  <tr>
  <th>ID</th>
  <th>FECHA</th>
  <th>TRABAJADOR</th>
  <th>TRABAJO</th>
  <th>TIPO</th>
  <th>CANTIDAD</th>
  <th>FINCA</th>
  <th>CUADRILLA</th>
  <th>PRODUCTO</th>
  <th>OBSERV</th>
  <th></th>
  </tr>
  </thead>
  <tbody>
  {% for parte in partes %}
  <tr>
  <th scope="row">{{ parte.id }}</th>
  <td>{{ parte.fecha|date('d-m-Y') }}</td>
  <td>{{ parte.trabajador.getNombre() }}</td>
  <td>{{ parte.trabajo }}</td>
  <td>{{ parte.tipo }}</td>
  <td>{{ parte.cantidad }}</td>
  <td>{{ parte.finca }}</td>
  <td>{{ parte.cuadrilla }}</td>
  <td>{{ parte.producto }}</td>
  {% if parte.observacion == NULL %}
  <td>Vale NULL</td>
  {% else %}
  <td>HAY OBSERVACION</td>
  {% endif %}
  <td>

  <a href=" {{ path('partetrabajo_edit', { 'id': parte.id }) }}">Editar |</a>
  <a href="{{ path('partetrabajo_show', { 'id': parte.id }) }}">Mostrar |</a>
  <a href="{{ path('partetrabajo_delete', { 'id': parte.id }) }}">Eliminar</a>
  </td>
  </tr>
  {% endfor %}
  </tbody>
  </table>
  </div>
</div>

{% endblock %}
